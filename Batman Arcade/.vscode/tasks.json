{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "hasp_patch_batman [Win_x86]",
            "type": "shell",
            "command": [
                "i686-w64-mingw32-gcc",
				"-shared",      
                "-m32",                    
                "'${workspaceFolder}/shared/mem.c'",               			
				"'${workspaceFolder}/hasp_patch/hasp_patch.c'",	
                "-static",      
                "-static-libgcc",
				"-lntdll",                  
                "-o '${workspaceFolder}/bin/hasp_patch_batman.dll'"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "usio_batman [Win_x86]",
            "type": "shell",
            "command": [
                "i686-w64-mingw32-gcc",
				"-shared",         
                "-m32",                                 
                "'${workspaceFolder}/shared/mem.c'",	                			
				"'${workspaceFolder}/usio_batman/xinput_gamepad.c'",	
                "'${workspaceFolder}/usio_batman/usio_batman.c'",	
                "'${workspaceFolder}/usio_batman/fake_libusb.c'",	
                "-static",      
                "-static-libgcc",
				"-lntdll",   
                "-lxinput",               
                "-o '${workspaceFolder}/bin/usio_batman.dll'"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }        
    ]
}